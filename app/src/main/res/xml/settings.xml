<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
	xmlns:android="http://schemas.android.com/apk/res/android">

	<PreferenceCategory
		android:title="Debug Settings"
		android:layout="@layout/util_preference_category_no_divider">

		<SwitchPreference
			android:title="@string/activity_settings_debug"
			android:summary="@string/activity_settings_debug_summary"
			android:key="@string/util_key_debug"/>

	</PreferenceCategory>

	<PreferenceCategory
		android:title="Data Settings"
		android:layout="@layout/util_preference_category_divider_above">

		<EditTextPreference
			android:title="@string/activity_settings_decimal"
			android:summary="@string/activity_settings_decimal_summary"
			android:key="@string/util_key_decimal"
			android:inputType="number"
			android:digits="0123456789"
			android:selectAllOnFocus="true"/>

	</PreferenceCategory>

</PreferenceScreen>