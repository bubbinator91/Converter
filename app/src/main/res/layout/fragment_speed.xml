<ScrollView
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	xmlns:cards="http://schemas.android.com/apk/res-auto"
	android:id="@+id/fragment_speed"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
    android:paddingTop="?android:attr/actionBarSize"
	android:clipToPadding="false"
	android:overScrollMode="never"
	tools:context=".MainActivity">

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:paddingLeft="@dimen/activity_horizontal_margin"
		android:paddingRight="@dimen/activity_horizontal_margin"
		android:paddingTop="@dimen/activity_vertical_margin"
		android:paddingBottom="@dimen/activity_vertical_margin">

		<android.support.v7.widget.CardView
			android:id="@+id/card_speed_fps"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_gravity="center"
            cards:cardCornerRadius="@dimen/card_corner_radius"
			cards:cardUseCompatPadding="true"
			cards:cardElevation="@dimen/card_elevation">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/card_content_padding">

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textColor="@color/colorTextPrimary"
					android:textSize="@dimen/card_title_text_size"
					android:text="@string/speed_fps"
					android:id="@+id/textView_speed_fps"
					android:labelFor="@+id/editText_speed_fps"
					android:layout_alignParentTop="true"
					android:layout_alignParentStart="true"/>

				<EditText
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:inputType="numberDecimal"
					android:digits="0123456789."
					android:selectAllOnFocus="true"
					android:ems="10"
					android:singleLine="true"
					android:maxLines="1"
					android:scrollHorizontally="true"
					android:id="@+id/editText_speed_fps"
					android:layout_below="@+id/textView_speed_fps"
					android:layout_alignParentStart="true"
					android:layout_alignParentEnd="true"/>

			</RelativeLayout>

		</android.support.v7.widget.CardView>

		<android.support.v7.widget.CardView
			android:id="@+id/card_speed_knot"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_gravity="center"
			android:layout_below="@+id/card_speed_fps"
            android:layout_marginTop="@dimen/card_margin_top"
            cards:cardCornerRadius="@dimen/card_corner_radius"
			cards:cardUseCompatPadding="true"
			cards:cardElevation="@dimen/card_elevation">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/card_content_padding">

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textColor="@color/colorTextPrimary"
					android:textSize="@dimen/card_title_text_size"
					android:text="@string/speed_knot"
					android:id="@+id/textView_speed_knot"
					android:labelFor="@+id/editText_speed_knot"
					android:layout_alignParentStart="true"/>

				<EditText
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:inputType="numberDecimal"
					android:digits="0123456789."
					android:selectAllOnFocus="true"
					android:ems="10"
					android:singleLine="true"
					android:maxLines="1"
					android:scrollHorizontally="true"
					android:id="@+id/editText_speed_knot"
					android:layout_below="@+id/textView_speed_knot"
					android:layout_alignParentStart="true"
					android:layout_alignParentEnd="true"/>

			</RelativeLayout>

		</android.support.v7.widget.CardView>

		<android.support.v7.widget.CardView
			android:id="@+id/card_speed_kph"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_gravity="center"
			android:layout_below="@+id/card_speed_knot"
            android:layout_marginTop="@dimen/card_margin_top"
            cards:cardCornerRadius="@dimen/card_corner_radius"
			cards:cardUseCompatPadding="true"
			cards:cardElevation="@dimen/card_elevation">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/card_content_padding">

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textColor="@color/colorTextPrimary"
					android:textSize="@dimen/card_title_text_size"
					android:text="@string/speed_kph"
					android:id="@+id/textView_speed_kph"
					android:labelFor="@+id/editText_speed_kph"
					android:layout_alignParentStart="true"/>

				<EditText
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:inputType="numberDecimal"
					android:digits="0123456789."
					android:selectAllOnFocus="true"
					android:ems="10"
					android:singleLine="true"
					android:maxLines="1"
					android:scrollHorizontally="true"
					android:id="@+id/editText_speed_kph"
					android:layout_below="@+id/textView_speed_kph"
					android:layout_alignParentStart="true"
					android:layout_alignParentEnd="true"/>

			</RelativeLayout>

		</android.support.v7.widget.CardView>

		<android.support.v7.widget.CardView
			android:id="@+id/card_speed_mps"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_gravity="center"
			android:layout_below="@+id/card_speed_kph"
            android:layout_marginTop="@dimen/card_margin_top"
            cards:cardCornerRadius="@dimen/card_corner_radius"
			cards:cardUseCompatPadding="true"
			cards:cardElevation="@dimen/card_elevation">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/card_content_padding">

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textColor="@color/colorTextPrimary"
					android:textSize="@dimen/card_title_text_size"
					android:text="@string/speed_mps"
					android:id="@+id/textView_speed_mps"
					android:labelFor="@+id/editText_speed_mps"
					android:layout_alignParentStart="true"/>

				<EditText
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:inputType="numberDecimal"
					android:digits="0123456789."
					android:selectAllOnFocus="true"
					android:ems="10"
					android:singleLine="true"
					android:maxLines="1"
					android:scrollHorizontally="true"
					android:id="@+id/editText_speed_mps"
					android:layout_below="@+id/textView_speed_mps"
					android:layout_alignParentStart="true"
					android:layout_alignParentEnd="true"/>

			</RelativeLayout>

		</android.support.v7.widget.CardView>

		<android.support.v7.widget.CardView
			android:id="@+id/card_speed_mph"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_gravity="center"
			android:layout_below="@+id/card_speed_mps"
            android:layout_marginTop="@dimen/card_margin_top"
            cards:cardCornerRadius="@dimen/card_corner_radius"
			cards:cardUseCompatPadding="true"
			cards:cardElevation="@dimen/card_elevation">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/card_content_padding">

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textColor="@color/colorTextPrimary"
					android:textSize="@dimen/card_title_text_size"
					android:text="@string/speed_mph"
					android:id="@+id/textView_speed_mph"
					android:labelFor="@+id/editText_speed_mph"
					android:layout_alignParentStart="true"/>

				<EditText
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:inputType="numberDecimal"
					android:digits="0123456789."
					android:selectAllOnFocus="true"
					android:ems="10"
					android:singleLine="true"
					android:maxLines="1"
					android:scrollHorizontally="true"
					android:id="@+id/editText_speed_mph"
					android:layout_below="@+id/textView_speed_mph"
					android:layout_alignParentStart="true"
					android:layout_alignParentEnd="true"/>

			</RelativeLayout>

		</android.support.v7.widget.CardView>

	</RelativeLayout>

</ScrollView>