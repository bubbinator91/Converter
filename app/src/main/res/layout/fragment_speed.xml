<ScrollView
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/windowBackgroundColor"
	tools:context=".MainActivity" >

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:paddingLeft="@dimen/activity_horizontal_margin"
		android:paddingRight="@dimen/activity_horizontal_margin"
		android:paddingTop="@dimen/activity_vertical_margin"
		android:paddingBottom="@dimen/activity_vertical_margin">

		<RelativeLayout
			android:id="@+id/card_speed_fps"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:background="@drawable/card"
			android:padding="15dp">

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textAppearance="?android:attr/textAppearanceLarge"
				android:text="@string/speed_fps"
				android:id="@+id/textView_speed_fps"
				android:labelFor="@+id/editText_speed_fps"
				android:layout_alignParentTop="true"
				android:layout_alignParentStart="true" />

			<EditText
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:inputType="numberDecimal"
				android:digits="0123456789."
				android:selectAllOnFocus="true"
				android:ems="10"
				android:id="@+id/editText_speed_fps"
				android:layout_below="@+id/textView_speed_fps"
				android:layout_alignParentStart="true"
				android:layout_alignParentEnd="true" />
		</RelativeLayout>

		<RelativeLayout
			android:id="@+id/card_speed_knot"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_below="@+id/card_speed_fps"
			android:layout_marginTop="10dp"
			android:background="@drawable/card"
			android:padding="15dp">

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textAppearance="?android:attr/textAppearanceLarge"
				android:text="@string/speed_knot"
				android:id="@+id/textView_speed_knot"
				android:labelFor="@+id/editText_speed_knot"
				android:layout_alignParentStart="true"
				android:layout_marginTop="16dp" />

			<EditText
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:inputType="numberDecimal"
				android:digits="0123456789."
				android:selectAllOnFocus="true"
				android:ems="10"
				android:id="@+id/editText_speed_knot"
				android:layout_below="@+id/textView_speed_knot"
				android:layout_alignParentStart="true"
				android:layout_alignParentEnd="true"/>
		</RelativeLayout>

		<RelativeLayout
			android:id="@+id/card_speed_kph"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_below="@+id/card_speed_knot"
			android:layout_marginTop="10dp"
			android:background="@drawable/card"
			android:padding="15dp">

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textAppearance="?android:attr/textAppearanceLarge"
				android:text="@string/speed_kph"
				android:id="@+id/textView_speed_kph"
				android:labelFor="@+id/editText_speed_kph"
				android:layout_alignParentStart="true"
				android:layout_marginTop="16dp" />

			<EditText
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:inputType="numberDecimal"
				android:digits="0123456789."
				android:selectAllOnFocus="true"
				android:ems="10"
				android:id="@+id/editText_speed_kph"
				android:layout_below="@+id/textView_speed_kph"
				android:layout_alignParentStart="true"
				android:layout_alignParentEnd="true" />
		</RelativeLayout>

		<RelativeLayout
			android:id="@+id/card_speed_mps"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_below="@+id/card_speed_kph"
			android:layout_marginTop="10dp"
			android:background="@drawable/card"
			android:padding="15dp">

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textAppearance="?android:attr/textAppearanceLarge"
				android:text="@string/speed_mps"
				android:id="@+id/textView_speed_mps"
				android:labelFor="@+id/editText_speed_mps"
				android:layout_alignParentStart="true"
				android:layout_marginTop="16dp" />

			<EditText
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:inputType="numberDecimal"
				android:digits="0123456789."
				android:selectAllOnFocus="true"
				android:ems="10"
				android:id="@+id/editText_speed_mps"
				android:layout_below="@+id/textView_speed_mps"
				android:layout_alignParentStart="true"
				android:layout_alignParentEnd="true" />
		</RelativeLayout>

		<RelativeLayout
			android:id="@+id/card_speed_mph"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_below="@+id/card_speed_mps"
			android:layout_marginTop="10dp"
			android:background="@drawable/card"
			android:padding="15dp">

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textAppearance="?android:attr/textAppearanceLarge"
				android:text="@string/speed_mph"
				android:id="@+id/textView_speed_mph"
				android:labelFor="@+id/editText_speed_mph"
				android:layout_alignParentStart="true"
				android:layout_marginTop="16dp" />

			<EditText
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:inputType="numberDecimal"
				android:digits="0123456789."
				android:selectAllOnFocus="true"
				android:ems="10"
				android:id="@+id/editText_speed_mph"
				android:layout_below="@+id/textView_speed_mph"
				android:layout_alignParentStart="true"
				android:layout_alignParentEnd="true" />
		</RelativeLayout>

	</RelativeLayout>
</ScrollView>